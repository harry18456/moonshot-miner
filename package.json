{
  "name": "moonshot-miner",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harry18456/moonshot-miner.git"
  },
  "version": "1.0.9",
  "description": "A cross-platform Bitcoin solo miner",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "harry18456",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "dotenv": "^17.3.1",
    "electron-store": "^11.0.2"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "com.moonshot.miner",
    "productName": "Moonshot Miner",
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png",
      "category": "Utility"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.map",
      "!package-lock.json",
      "!dist",
      "!node_modules",
      "node_modules",
      "!build_helper.bat",
      "!.git",
      "!.github",
      "!*.md",
      "!LICENSE",
      "!mk_cache"
    ],
    "compression": "maximum",
    "asar": true,
    "directories": {
      "output": "dist"
    }
  }
}